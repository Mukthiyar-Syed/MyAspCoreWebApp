@{
}
@model MyAspCoreWebApp.Models.FileViewModel

@{
    ViewData["Title"] = "Available Files";
}

<h2>Available Files for Download</h2>

@if (Model.FileNames != null && Model.FileNames.Any())
{
    <ul>
        @foreach (var fileName in Model.FileNames)
        {
            <li>
                <a asp-controller="Home" asp-action="Download" asp-route-fileName="@fileName">@fileName</a>
            </li>
        }
    </ul>
}
else
{
    <p>No files found in the file share.</p>
}